<UserControl x:Class="CuaHangMT.View.ThongTinCaNhan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CuaHangMT.View"
              mc:Ignorable="d" Width="900" Height="600">
    <Grid>
        <Border CornerRadius="20"
        Background="#212529">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60.48"/>
                        <ColumnDefinition Width="79.52"/>
                        <ColumnDefinition Width="380"/>
                        <ColumnDefinition Width="120"/>
                    </Grid.ColumnDefinitions>

                </Grid>
                <TextBlock Text="Mật Khẩu : "
                Foreground="White"
                FontSize="20"
                FontFamily="Times New Roman"
                Grid.Column="0"
                VerticalAlignment="Top"
                Margin="82,133,680,0" Grid.Row="1"/>
                <TextBox x:Name="txtTaiKhoan"
                FontSize="21"
                FontWeight="Medium"
                FontFamily="Times New Roman"
                Background="#272B2F"
                BorderThickness="0"
                Margin="321,39,379,461" Grid.Row="1" Foreground="White"/>
                <TextBlock
                Foreground="White"
                FontSize="20"
                FontFamily="Times New Roman"
                Grid.Column="0"
                VerticalAlignment="Top"
                Margin="84,122,592,0" Grid.Row="1"/>
                <Button x:Name="btnCapnhap"
                Margin="618,419,117,81"
                Foreground="White"
                Content="Cập nhập thông tin"
                FontFamily="Times New Roman"
                FontSize="20"
                Background="#0BCDFF" Grid.Row="1" Click="btnCapnhap_Click" >
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border 
                            CornerRadius="10"
                            Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <TextBox x:Name="txtMatKhau"
                    FontSize="21"
                    FontWeight="Medium"
                    FontFamily="Times New Roman"
                    Background="#272B2F"
                    BorderThickness="0"
                    Margin="321,120,380,381" Grid.Row="1" Foreground="White"/>
                <TextBox x:Name="txttenhienthi"
                    FontSize="21"
                    FontWeight="Medium"
                    FontFamily="Times New Roman"
                    Background="#272B2F"
                    BorderThickness="0"
                    Margin="320,200,381,301" Grid.Row="1" Foreground="White"/>
                <TextBox x:Name="txtMatKhauMoi"
                    FontSize="21"
                    FontWeight="Medium"
                    FontFamily="Times New Roman"
                    Background="#272B2F"
                    BorderThickness="0"
                    Margin="321,280,380,220" Grid.Row="1" Foreground="White"/>
                <TextBox x:Name="txtNhapLai"
                    FontSize="21"
                    FontWeight="Medium"
                    FontFamily="Times New Roman"
                    Background="#272B2F"
                    BorderThickness="0"
                    Margin="322,362,379,140" Grid.Row="1" Foreground="White"/>
                <TextBlock Text="Tài Khoản : "
                    Foreground="White"
                    FontSize="20"
                    FontFamily="Times New Roman"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    Margin="82,50,680,0" Grid.Row="1"/>
                <TextBlock Text="Tên hiện thị : "
                    Foreground="White"
                    FontSize="20"
                    FontFamily="Times New Roman"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    Margin="81,222,681,0" Grid.Row="1"/>
                <TextBlock Text="Mật khẩu mới : "
                    Foreground="White"
                    FontSize="20"
                    FontFamily="Times New Roman"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    Margin="82,296,680,0" Grid.Row="1"/>
                <TextBlock Text="Nhập lại mật khẩu mới : "
                    Foreground="White"
                    FontSize="20"
                    FontFamily="Times New Roman"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    Margin="80,377,617,0" Grid.Row="1"/>

            </Grid>

        </Border>
    </Grid>
</UserControl>
